type size = Small | Medium | Large

let size_to_number = function Small -> 16 | Medium -> 20 | Large -> 24

module Link2 = struct
  module Binding = struct
    external make : size:int -> className:string -> React.element = "Link2"
    [@@react.component] [@@mel.module "lucide-react"]
  end

  let[@react.component] make ?(size : size = Medium) ?(className = "") =
    <Binding size=(size_to_number size) className />
end

